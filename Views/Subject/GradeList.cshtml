@model DataTable
@using System.Data;
@{
    ViewData["Title"] = "Grades";
    int subjectId = (int)ViewBag.SubjectID;
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary font-weight-bold"><i class="fas fa-layer-group"></i> Grades</h2>
        <a asp-controller="Subject" asp-action="SubjectList" asp-route-subjectId="@subjectId" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Subjects
        </a>
    </div>

    @if (Model != null && Model.Rows.Count > 0)
    {
        <div class="row">
            @foreach (DataRow grade in Model.Rows)
            {
                <div class="col-lg-4 mb-5">
                    <div class="card border-0 bg-light shadow-sm pb-2">
                        <div class="card-body text-center">
                            <i class="fas fa-layer-group fa-3x text-info mb-3"></i>
                            <h4 class="card-title font-weight-bold text-secondary">@grade["Name"]</h4>
                            <p class="card-text">
                                Brief description or details about the grade level. Add more context if needed.
                            </p>
                        </div>
                        <div class="card-footer bg-transparent py-4 px-5">
                            <div class="row border-bottom">
                                <div class="col-6 py-1 text-right border-right">
                                    <strong>Grade Level</strong>
                                </div>
                                <div class="col-6 py-1">@grade["Name"]</div>
                            </div>
                            <div class="row border-bottom">
                                <div class="col-6 py-1 text-right border-right">
                                    <strong>Total Subjects</strong>
                                </div>
                                <div class="col-6 py-1">10 Subjects</div>
                            </div>
                            <div class="row border-bottom">
                                <div class="col-6 py-1 text-right border-right">
                                    <strong>Class Time</strong>
                                </div>
                                <div class="col-6 py-1">09:00 - 11:00</div>
                            </div>
                            <div class="row">
                                <div class="col-6 py-1 text-right border-right">
                                    <strong>Tuition Fee</strong>
                                </div>
                                <div class="col-6 py-1">$300 / Month</div>
                            </div>
                        </div>
                        <a href="@Url.Action("ChapterList", "Subject", new { subjectId = subjectId, gradeId = grade["GradeID"] })" class="btn btn-primary px-4 mx-auto mb-4">
                            <i class="fas fa-arrow-right"></i> View Chapters
                        </a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle"></i> No grades available for this subject.
        </div>
    }
</div>
