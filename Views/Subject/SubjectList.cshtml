@model DataTable
@using System.Data;

@{
    ViewData["Title"] = "Subjects";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary font-weight-bold"><i class="fas fa-book"></i> Subjects</h2>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Home
        </a>
    </div>

    @if (Model != null && Model.Rows.Count > 0)
    {
        <div class="row">
            @foreach (DataRow subject in Model.Rows)
            {
                <div class="col-lg-4 mb-5">
                    <div class="card border-0 bg-light shadow-sm pb-2">
                        <div class="card-body text-center">
                            <i class="fas fa-book fa-3x text-primary mb-3"></i>
                            <h4 class="card-title font-weight-bold text-secondary">@subject["Name"]</h4>
                            <p class="card-text">
                                Brief description or details about the subject. Add more context if needed.
                            </p>
                        </div>
                        <div class="card-footer bg-transparent py-4 px-5">
                            <div class="row border-bottom">
                                <div class="col-6 py-1 text-right border-right">
                                    <strong>Age of Kids</strong>
                                </div>
                                <div class="col-6 py-1">3 - 6 Years</div>
                            </div>
                            <div class="row border-bottom">
                                <div class="col-6 py-1 text-right border-right">
                                    <strong>Total Seats</strong>
                                </div>
                                <div class="col-6 py-1">40 Seats</div>
                            </div>
                            <div class="row border-bottom">
                                <div class="col-6 py-1 text-right border-right">
                                    <strong>Class Time</strong>
                                </div>
                                <div class="col-6 py-1">08:00 - 10:00</div>
                            </div>
                            <div class="row">
                                <div class="col-6 py-1 text-right border-right">
                                    <strong>Tuition Fee</strong>
                                </div>
                                <div class="col-6 py-1">$290 / Month</div>
                            </div>
                        </div>
                        <a href="@Url.Action("GradeList", "Subject", new { subjectId = subject["SubjectID"] })" class="btn btn-primary px-4 mx-auto mb-4">
                            <i class="fas fa-arrow-right"></i> View Grades
                        </a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle"></i> No subjects available.
        </div>
    }
</div>
