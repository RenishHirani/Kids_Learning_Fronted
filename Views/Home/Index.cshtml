@{
    ViewData["Title"] = "Home Page";
}
<!-- Header Start -->
<div class="bg-primary text-white px-0 px-md-5 mb-5">
    <div class="row align-items-center px-3 py-5">
        <div class="col-lg-6 text-center text-lg-left">
            <h4 class="mb-3">Kids Learning Center</h4>
            <h1 class="display-3 font-weight-bold">Innovative Learning for Kids</h1>
            <p class="mb-4">
                Providing an interactive and fun learning environment for kids, helping them develop essential skills with engaging activities and modern techniques.
            </p>
            <a href="#" class="btn btn-light text-primary mt-1 py-3 px-5 font-weight-bold">Learn More</a>
        </div>
        <div class="col-lg-6 text-center">
            <img class="img-fluid mt-4" src="img/header.png" alt="Kids Learning" />
        </div>
    </div>
</div>
<!-- Header End -->
<!-- Welcome Section -->
<div class="container text-center my-5">
    <h1 class="display-4 text-primary font-weight-bold">Welcome to Kids Learning</h1>
    <p class="lead text-muted">Empowering young minds through creative education and playful learning experiences.</p>
</div>

<!-- Features Section -->
<div class="container text-center my-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card border-0 shadow-lg p-4">
                <i class="fas fa-book-open fa-3x text-primary"></i>
                <h4 class="mt-3">Engaging Curriculum</h4>
                <p>Interactive lessons designed to boost creativity and learning.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-lg p-4">
                <i class="fas fa-paint-brush fa-3x text-primary"></i>
                <h4 class="mt-3">Creative Activities</h4>
                <p>Hands-on projects that make learning fun and exciting.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-lg p-4">
                <i class="fas fa-user-friends fa-3x text-primary"></i>
                <h4 class="mt-3">Supportive Community</h4>
                <p>Encouraging environment with passionate educators.</p>
            </div>
        </div>
    </div>
</div>

<!-- Call to Action -->
<div class="container text-center my-5">
    <h2 class="text-primary font-weight-bold">Join Our Learning Community</h2>
    <p class="lead text-muted">Start your child’s learning journey with us today!</p>
    <a href="#" class="btn btn-primary py-3 px-5 font-weight-bold">Enroll Now</a>
</div>